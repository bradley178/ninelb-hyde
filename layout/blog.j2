{% extends "base.j2" %}

{% block main -%}
    <article class="post">

        <h2 class="title">{{ resource.meta.title }}</h2>
        
        {% filter markdown|typogrify -%}
            {% mark post -%}
                {% block post -%}{%- endblock %}
            {%- endmark %}
        {%- endfilter %}
        
        <time datetime="{{ resource.meta.created.strftime('%Y-%m-%d') }}">
            Posted: {{ resource.meta.created.strftime('%a, %d %b %Y') }}
        </time>        
    </article>

{%- endblock %}